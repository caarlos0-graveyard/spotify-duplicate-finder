<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-stripped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Album</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tracks.each do |track| %>
          <tr>
            <td><%= track.name %></td>
            <td><%= track.artists.map(&:name).join(' ') %></td>
            <td><%= track.album.name %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
